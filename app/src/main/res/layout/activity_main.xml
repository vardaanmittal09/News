<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/images"
    android:layout_height="match_parent"
    tools:context="com.example.android.booksapi.MainActivity">

    <EditText
        android:drawablePadding="25dp"
        android:drawableLeft="@mipmap/username"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:id="@+id/luser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:drawableLeft="@mipmap/pass"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:id="@+id/lpass"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/luser"
        android:layout_alignStart="@+id/luser"
        android:layout_below="@+id/luser"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:drawablePadding="25dp"
        android:inputType="textPassword"
        android:hint="Password" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#000000"
        android:textSize="25sp"
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Click here to register"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
