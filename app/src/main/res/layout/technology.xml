<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@mipmap/images"
    android:layout_width="350dp"
    android:layout_height="550dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.booksapi.TAbbed$PlaceholderFragment">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rlars"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:src="@mipmap/tech1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:id="@+id/imageView6" />
                <ImageView
                    android:id="@+id/cric"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/arstechnica"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" />
                <ImageView
                    android:src="@mipmap/rightwhite"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="29dp"
                    android:layout_alignBottom="@+id/cric"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView7" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rltech2"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:src="@mipmap/tech2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" />
                <ImageView

                    android:id="@+id/foot"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/hacker"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp" />

                <ImageView
                    android:src="@mipmap/rightwhite"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="22dp"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rltech3"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:src="@mipmap/tech3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView8"
                    android:layout_toStartOf="@+id/imageView8"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />
                <ImageView
                    android:id="@+id/espn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/engadget"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView8"
                    android:layout_toEndOf="@+id/imageView8"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />
                <ImageView
                    android:src="@mipmap/rightwhite"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="29dp"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView8" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
