<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@mipmap/images"
    android:layout_width="350dp"
    android:layout_height="550dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.booksapi.TAbbed$PlaceholderFragment">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:layout_height="wrap_content">


            <RelativeLayout android:background="#ffffff"
                android:id="@+id/cnbc"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:src="@mipmap/money1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />
                <ImageView
                    android:id="@+id/toi"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/cnbc"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />
                <ImageView
                    android:src="@mipmap/rightwhite"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/toi"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="19dp"
                    android:id="@+id/imageView5" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/bloom"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:src="@mipmap/money2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" />
                <ImageView
                    android:background="#13a1d5"
                    android:id="@+id/usa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/bloom"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />

                <ImageView
                    android:src="@mipmap/rightwhite"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="22dp"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView4" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/ft"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:src="@mipmap/money3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />
                <ImageView
                    android:id="@+id/cnn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ft"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp" />
                <ImageView
                    android:src="@mipmap/rightwhite"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="29dp"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
